<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:video="clr-namespace:Xam.Forms.VideoPlayer;assembly=Xam.Forms.VideoPlayer"
             x:Class="EjercicioDosPuntoCuatro.MainPage">

    <StackLayout>
        <video:VideoPlayer 
            PlayCompletion="videoPlayer_PlayCompletion"   
            x:Name="videoPlayer" 
            BackgroundColor="Gray"
            HorizontalOptions="Center"
            HeightRequest="200" 
            WidthRequest="300"/>

        <Button 
            Text="Capturar Video" 
            x:Name="btnVideo" 
            Clicked="btnVideo_Clicked" />
        <Button 
            Text="Grabar Video" 
            x:Name="btnreproducir" 
            Clicked="btnreproducir_Clicked" />
        
        <Entry Placeholder="Desscripción" x:Name="txtPineda" />

        <Button 
            Text="Guardar Video" 
            x:Name="btnGuardar" 
            Clicked="btnGuardar_Clicked" />
        <Button 
            Text="Ver Listado de Videos" 
            x:Name="btnLista" 
            Clicked="btnLista_Clicked" />

    </StackLayout>

</ContentPage>
